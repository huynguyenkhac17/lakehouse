<?xml version="1.0"?>
<clickhouse>
    <!-- S3 Storage Configuration for MinIO -->
    <s3>
        <minio>
            <endpoint>http://minio:9000/</endpoint>
            <access_key_id>admin</access_key_id>
            <secret_access_key>password</secret_access_key>
            <use_environment_credentials>false</use_environment_credentials>
        </minio>
    </s3>

    <!-- Named collections for easier table creation -->
    <named_collections>
        <minio_lakehouse>
            <url>http://minio:9000/lakehouse/</url>
            <access_key_id>admin</access_key_id>
            <secret_access_key>password</secret_access_key>
        </minio_lakehouse>
    </named_collections>
</clickhouse>
